<main>
  <!-- ===== Formulario de Registro Start ===== -->
  <section class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <!-- Borde de fondo -->
        <div class="card shadow-lg p-4">
          <div class="card-body">
            <h2 class="text-center mb-4">Crear una Cuenta</h2>

            <!-- Mostrar el error si existe -->
            {{#if error}}
            <div class="alert alert-danger">
              <p>{{error}}</p>
            </div>
            {{/if}}

            <form action="/register" method="POST" novalidate>
              <!-- Campo de nombre de usuario -->
              <div class="mb-3">
                <label for="username" class="form-label">Nombre de Usuario</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Devid Wonder" required>
              </div>

              <!-- Campo de correo electrónico -->
              <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="example@gmail.com" required>
              </div>

              <!-- Campo de contraseña -->
              <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="**************" required>
              </div>

              <!-- Botón de registro -->
              <button type="submit" class="btn btn-primary w-100 py-2">Registrarse</button>

              <!-- Enlace de inicio de sesión -->
              <p class="text-center mt-3">
                ¿Ya tienes una cuenta?
                <a href="/login" class="text-primary">Iniciar sesión</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ===== Formulario de Registro End ===== -->
</main>
